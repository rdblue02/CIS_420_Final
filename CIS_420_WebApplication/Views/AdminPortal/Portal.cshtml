
@{
    ViewData["Title"] = "AdminPortal";
}


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
<div class="container-wrapper">
    <div class="small-landing">
        <h2>Admin Portal</h2>
    </div>

    <div class="container">

        @if (User.IsInRole("FullAdmin"))
        {
            <div class="row">
                <a asp-area="" asp-controller="UserManager" asp-action="Index">
                    <div class="col-md-4 text-center" style="padding-top: 30px; padding-bottom: 30px;">
                        <center><i class="fa fa-user" style="color:#BB7824; font-size: 30px;"></i></center>
                        <h4>Manage Users</h4>
                    </div>
                </a>
                <a asp-area="" asp-controller="BoardMembers" asp-action="Index">
                    <div class="col-md-4 text-center" style="padding-top: 30px; padding-bottom: 30px;">
                        <center><i class="fa fa-users" style="color:#16A085; font-size: 30px;"></i></center>
                        <h4>Board Member Management</h4>
                    </div>
                </a>
                <a asp-area="" asp-controller="Events" asp-action="Index">
                    <div class="col-md-4 text-center" style="padding-top: 30px; padding-bottom: 30px;">
                        <center><i class="fa fa-calendar" style="color:#d50f25; font-size: 30px;"> </i></center>
                        <h4>Events</h4>
                    </div>
                </a>
            </div>
            <div class="row">
                <a asp-area="" asp-controller="AuctionItems" asp-action="Index">
                    <div class="col-md-4 text-center" style="padding-top: 30px; padding-bottom: 30px;">
                        <center><i class="fa fa-tags" style="color:#3369e8; font-size: 30px;"> </i></center>
                        <h4>Auction Items</h4>
                    </div>
                </a>
                <a asp-area="" asp-controller="Horses" asp-action="Index">
                    <div class="col-md-4 text-center" style="padding-top: 30px; padding-bottom: 30px;">
                        <center><i class="fa fa-home" style="color:#fabc09; font-size: 30px;"> </i></center>
                        <h4>Horses</h4>
                    </div>
                </a>
                <a asp-area="" asp-controller="DonationPackages" asp-action="Index">
                    <div class="col-md-4 text-center" style="padding-top: 30px; padding-bottom: 30px;">
                        <center><i class="fa fa-gift" style="color:#825d09; font-size: 30px;"></i></center>
                        <h4 style="color:#303030;">Donation Packages</h4>
                    </div>
                </a>
            </div>
        }
    </div>
</div>



