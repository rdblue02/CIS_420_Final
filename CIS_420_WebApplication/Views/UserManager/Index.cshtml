@model IEnumerable<CIS_420_WebApplication.Models.ApplicationUser>
@{
    ViewData["Title"] = "UserManager";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
<div class="container">
    <div class="nested-section">
        <h1>User Permissions</h1>
        <h5>This page allows you to manage the access level of your users</h5>
        <br/>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        User ID
                        <!--@Html.DisplayNameFor(model => model.ApplicationUserId)-->
                    </th>
                    <th>
                        Creation Date
                        <!--@Html.DisplayNameFor(model => model.AccountCreationDate)-->
                    </th>
                    <th>
                        First Name
                        <!--@Html.DisplayNameFor(model => model.FirstName)-->
                    </th>
                    <th>
                        Last Name
                        <!--@Html.DisplayNameFor(model => model.LastName)-->
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Access)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountCreationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Access)
                        </td>
                        <td class="text-right">
                            <button class="btn btn-primary">
                                <a asp-action="Edit" asp-route-id="@item.ApplicationUserId">Edit</a>
                            </button>
                            <button class="btn btn-info">
                                <a asp-action="Details" asp-route-id="@item.ApplicationUserId">Details</a>
                            </button>
                            <button class="btn btn-danger">
                                <a asp-action="Delete" asp-route-id="@item.ApplicationUserId">Delete</a>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
</div>